---
import logoPng from '../../assets/Logo.png'
---

<nav class="bg-teal-700 text-white fixed top-0 left-0 right-0 z-50">
    <div class="max-w-7xl mx-auto h-16 flex items-center justify-between px-4">
      <div class="flex items-center gap-2 h-full">
        <img class="w-12 h-12 md:w-20 md:h-20" src={logoPng.src} alt="logo">
        <h2 class="font-medium text-xl">SyncSpend</h2>
      </div>

      <!-- Desktop Links -->
      <div id="nav-desktop-links" class="hidden md:flex items-center gap-4">
        <div id="links-container" class="flex items-center gap-4"></div>
        <div id="nav-user-container">
          <p id="nav-user-name" class="px-3 py-1 rounded-full bg-white/10 text-white transition duration-300 ease-in-out hover:bg-white/20"></p>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden flex items-center justify-center p-2 rounded-md bg-white text-teal-700">
        <svg class="w-8 h-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden fixed inset-y-0 right-0 w-64 bg-teal-800 text-white transform transition-transform duration-300 ease-in-out z-40 p-4">
        <div class="flex justify-end">
            <button id="close-mobile-menu-btn" class="p-2 rounded-md text-white hover:bg-teal-700">
                <svg class="w-8 h-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
        <div id="mobile-links-container" class="flex flex-col gap-4 mt-8">
        </div>
    </div>

    <!-- Mobile Menu Overlay -->
    <div id="mobile-menu-overlay" class="hidden fixed inset-0 bg-black opacity-50 z-30">
    </div>
</nav>

<script>
  // @ts-nocheck
  import AuthModule, {user} from '../auth/auth.module';
  import { getLinks } from "./navigation.utils";

  const navLinksContainer = document.querySelector('#links-container');
  const mobileLinksContainer = document.querySelector('#mobile-links-container');
  const navUserName = document.querySelector('#nav-user-name');
  const mobileMenuBtn = document.querySelector('#mobile-menu-btn');
  const mobileMenu = document.querySelector('#mobile-menu');
  const closeMobileMenuBtn = document.querySelector('#close-mobile-menu-btn');
  const mobileMenuOverlay = document.querySelector('#mobile-menu-overlay');

  const pathname = location.pathname;
  const links = getLinks(pathname);

  // Function to create and append links
  const createLinks = (container, isMobile = false) => {
    links.forEach(link => {
      if (link.type === 'button') {
        const btn = document.createElement('button');
        btn.addEventListener('click', link.handler);
        btn.innerHTML = link.text;
        btn.className = `font-medium ${isMobile ? 'text-lg w-full text-left p-2 rounded-md hover:bg-teal-700' : 'text-white no-underline hover:underline'}`;
        container.append(btn);
        console.log(btn);
        
      } else {
        const a = document.createElement('a');
        a.href = link.path;
        a.innerHTML = link.text;
        a.className = `font-medium ${isMobile ? 'text-lg w-full text-left p-2 rounded-md hover:bg-teal-700' : 'text-white no-underline hover:underline'}`;
        container.append(a);
        console.log(a);  
      }
    });
  };
  console.log(links);  

  // Render desktop and mobile links
  createLinks(navLinksContainer);
  createLinks(mobileLinksContainer, true);

  // Mobile menu functionality
  mobileMenuBtn.addEventListener('click', () => {
    mobileMenu.classList.remove('hidden');
    mobileMenuOverlay.classList.remove('hidden');
    mobileMenu.style.transform = 'translateX(0)';
  });

  closeMobileMenuBtn.addEventListener('click', () => {
    mobileMenu.style.transform = 'translateX(100%)';
    setTimeout(() => {
        mobileMenu.classList.add('hidden');
        mobileMenuOverlay.classList.add('hidden');
    }, 300);
  });

  mobileMenuOverlay.addEventListener('click', () => {
    closeMobileMenuBtn.click();
  });

  user.subscribe(user => {
    if (!user) return;
    console.log(user);
    const userName = user.name;
    console.log(userName);
    
    navUserName.innerHTML = `Bienvenido ${userName}`;
  });

</script>